<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".ReportsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ipfsReportImageView"
            android:layout_width="300dp"
            android:layout_height="350dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_baseline_cloud_download_24" />

        <TextView
            android:id="@+id/departmentTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ipfsReportImageView"
            android:layout_marginTop="40dp"
            android:background="@drawable/report_text_border"
            android:hint="Department"
            android:padding="10dp" />

        <TextView
            android:id="@+id/reportDescription"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@id/departmentTextView"
            android:layout_marginTop="30dp"
            android:background="@drawable/report_text_border"
            android:gravity="start"
            android:maxLines="10"
            android:padding="10dp"
            android:hint="Description..."
            android:scrollbars="vertical" />

        <TextView
            android:id="@+id/reportCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/reportDescription"
            android:layout_marginTop="30dp"
            android:background="@drawable/report_text_border"
            android:hint="City Name"
            android:padding="10dp" />

        <TextView
            android:id="@+id/reportStatus"
            android:layout_below="@+id/reportCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Status"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:background="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="10dp" />

    </RelativeLayout>

</ScrollView>